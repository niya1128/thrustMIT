int myNum,buzzPin=8,dTime=1000;
void setup()
{
  pinMode(buzzPin, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  Serial.println("Please input your number");
  while(Serial.available()==0)
  {
  }
  myNum=Serial.parseInt();
  if (myNum>10)
  {
    digitalWrite(buzzPin,HIGH);
    delay(dTime);
    digitalWrite(buzzPin,LOW);
  }
}
